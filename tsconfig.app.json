{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"shims-vue.d.ts"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
